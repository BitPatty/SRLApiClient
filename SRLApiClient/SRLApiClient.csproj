<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyVersion>0.5.2.0</AssemblyVersion>
    <FileVersion>0.5.2.0</FileVersion>
    <Version>0.5.2</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>BitPatty &lt;psy@zint.ch&gt;</Authors>
    <Description>API Wrapper for the SpeedRunsLive API</Description>
    <RepositoryUrl>https://github.com/BitPatty/SRLApiClient</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/BitPatty/SRLApiClient</PackageProjectUrl>
    <PackageLicenseUrl>https://www.gnu.org/licenses/agpl-3.0.en.html</PackageLicenseUrl>
    <PackageReleaseNotes>API Wrapper for the SpeedRunsLive API</PackageReleaseNotes>
    <PackageTags>speedrunslive</PackageTags>
    <Copyright>2018 Matt Collet</Copyright>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <NoWarn>1701;1702;RCS1170</NoWarn>
    <DocumentationFile>bin\Debug\SRLApiClient.XML</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <NoWarn>1701;1702;RCS1170</NoWarn>
    <DocumentationFile>bin\Release\SRLApiClient.XML</DocumentationFile>
  </PropertyGroup>

</Project>
